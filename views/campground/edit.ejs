<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width:45%;margin:25px auto;">
            <div class="panel panel-warning"> 
            <div class="panel-heading"> <h3 class="panel-title">Edit <strong><%=campground.name%></strong></h3> </div> 
                <div class="panel-body"> 
                    <form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="campground[name]" id="name" value="<%=campground.name%>">
                    </div>
                    <div class="form-group">
                         <label for="name">Price</label>
                        <input class="form-control" type="number" name="campground[price]" value="<%=campground.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" type="text" name="campground[image]" id="image" value="<%=campground.image%>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea  class="form-control"  name="campground[description]" id="description" rows="3" cols="50"><%=campground.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-warning btn-block">Submit</button>
                    </div>
                    </form>
                    <a href="/campground">Go Back</a>
                </div>
            </div>
        </div>

        
    </div>
</div>
<% include ../partials/footer %>