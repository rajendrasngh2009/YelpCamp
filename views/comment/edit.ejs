<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width:45%;margin:25px auto;">
            <div class="panel panel-warning"> 
                <div class="panel-heading"> <h3 class="panel-title">Edit Comment for <strong></strong></h3>  </div> 
                <div class="panel-body"> 
                <form action="/campground/<%= campground_id%>/comment/<%= comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="text">Comment</label>
                        <textarea  class="form-control"  name="comment[text]" id="text" rows="2" cols="30"><%= comment.text%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-warning btn-block">Update</button>
                    </div>
                </form>
                <a href="/campground">Go Back</a>
                </div>
            </div>
        </div>

        
    </div>
</div>

