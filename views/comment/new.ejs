<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width:45%;margin:25px auto;">
            <div class="panel panel-success"> 
                <div class="panel-heading"> <h3 class="panel-title">Add  new Comment for <strong><%=campground.name%></strong></h3>  </div> 
                <div class="panel-body"> 
                    <form action="/campground/<%= campground._id%>/comment" method="POST">
                        <div class="form-group">
                             <label for="text">Comment</label>
                            <textarea  class="form-control"  name="comment[text]" id="text" rows="2" cols="30"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-success btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/campground">Go Back</a>
                </div>
            </div>    
        </div>

        
    </div>
</div>
<% include ../partials/footer %>